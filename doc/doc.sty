% Blog entries
% New day
\NewDocumentCommand{\newday}{m}{%
    \section*{#1}%
}
% Post author
\NewDocumentCommand{\name}{m}{%
    \noindent \textbf{\textsc{#1:}}%
}

% Floating figure with subfigures, width based
\NewDocumentCommand{\subgraphicw}{m m m}{
    \begin{subfigure}[H]{#1 \textwidth}
        \includegraphics[width=\textwidth]{#3}
        \caption{(#2)}
    \end{subfigure}
}
% Floating figure without subfigures, width based
\NewDocumentCommand{\graphicw}{m m}{
    \includegraphics[width=#1 \textwidth]{#2}
}
% Floating figure with subfigures, height based
\NewDocumentCommand{\subgraphich}{m m m}{
    \begin{subfigure}[H]{#1 \textwidth}
        \includegraphics[height=\textwidth]{#3}
        \caption{(#2)}
    \end{subfigure}
}
% Floating figure without subfigures, height based
\NewDocumentCommand{\graphich}{m m}{
    \includegraphics[height=#1 \textwidth]{#2}
}

% arXiv markup, especially useful in bibliographies
\NewDocumentCommand\arXiv{m}{\texttt{\href{http://arXiv.org/abs/#1}{arXiv:#1}}}
